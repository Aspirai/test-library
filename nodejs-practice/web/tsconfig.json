{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": ["es2021"],
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
